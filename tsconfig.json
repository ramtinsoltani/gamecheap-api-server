{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": false,
    "sourceRoot": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "paths": {
      "@steroids/core": [
        "./src/@steroids/core"
      ],
      "@steroids/models": [
        "./src/@steroids/models"
      ],
      "@steroids/router/*": [
        "./src/routers/*.router"
      ],
      "@steroids/service/*": [
        "./src/services/*.service"
      ],
      "@steroids/model/*": [
        "./src/models/*.model"
      ],
      "@steroids/validator/*": [
        "./src/validators/*.validator"
      ],
      "@steroids/middleware/*": [
        "./src/middleware/*.middleware"
      ]
    }
  },
  "exclude": [
    "dist",
    "docs",
    "node_modules"
  ]
}